{
    "name": "illuminated/testing-tools",
    "description": "Provides Laravel-specific testing helpers and asserts.",
    "keywords": ["laravel", "testing", "helpers", "asserts"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Ivanov",
            "email": "dmitry.g.ivanov@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "illuminate/support": "5.6.*",
        "illuminate/database": "5.6.*",
        "mockery/mockery": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "orchestra/testbench": "3.6.*",
        "illuminated/helper-functions": "5.6.*"
    },
    "autoload": {
        "psr-4": {
            "Illuminated\\Testing\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestingTools/TestCase.php",
            "tests/TestingTools/fixture/app"
        ]
    }
}
