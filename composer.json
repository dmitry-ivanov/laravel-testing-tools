{
    "name": "illuminated/testing-tools",
    "description": "Laravel-specific Testing Helpers and Assertions.",
    "keywords": ["laravel", "testing", "tools", "helpers", "assertions", "assertion-methods", "assertion-functions"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/dmitry-ivanov/laravel-testing-tools/issues",
        "source": "https://github.com/dmitry-ivanov/laravel-testing-tools"
    },
    "authors": [{
        "name": "Dmitry Ivanov",
        "email": "dmitry.g.ivanov@gmail.com"
    }],
    "require": {
        "php": "^8.2",
        "illuminate/database": "^12.0",
        "illuminate/support": "^12.0",
        "mockery/mockery": "^1.6.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.3",
        "orchestra/testbench": "^10.0.0"
    },
    "autoload": {
        "psr-4": {
            "Illuminated\\Testing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Illuminated\\Testing\\Tests\\": "tests/",
            "Illuminated\\Testing\\Tests\\App\\": "tests/fixture/app/",
            "Illuminated\\Testing\\Tests\\Database\\Factories\\": "tests/fixture/database/factories/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
